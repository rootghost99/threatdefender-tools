{
  "name": "threat-intel-checker",
  "version": "1.0.0",
  "description": "Standalone Windows application for threat intelligence lookups",
  "main": "main.js",
  "author": "ThreatDefender Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"wait-on http://localhost:3001/health && electron .\"",
    "server": "node server/index.js",
    "build": "npm run build:react && electron-builder",
    "build:react": "cd src && npm run build",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.threatdefender.threatintelchecker",
    "productName": "Threat Intel Checker",
    "copyright": "Copyright 2024 ThreatDefender Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "src/build/**/*",
      "assets/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "ThreatDefender"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Threat Intel Checker",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "LICENSE.txt"
    }
  }
}
